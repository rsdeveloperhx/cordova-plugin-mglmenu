<?xml version="1.0" encoding="utf-8"?>
<plugin id="cordova-plugin-mglmenu"
        version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>mglmenu</name>
    <engines>
        <engine name="cordova" version=">=9.0.0"/>
        <engine name="cordova-android" version=">=12.0.0" />
        <engine name="cordova-ios" version=">=5.1.0" />
    </engines>
    <js-module name="mglmenu" src="www/cordova-plugin-mglmenu.js">
        <clobbers target="cordova.plugins.mglmenu" />
    </js-module>

    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="mglmenu">
                <param name="android-package" value="ch.migros.plugin.cordova-plugin-mglmenu" />
            </feature>
        </config-file>

        <config-file parent="/*" target="AndroidManifest.xml" />

        <source-file src="src/android/cordova-plugin-mglmenu.java"
                     target-dir="src/ch/migros/plugin" />
    </platform>

</plugin>
